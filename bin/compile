#!/usr/bin/env ruby

puts "Installing freetds into #{ARGV[0]}/vendor/freetds"

`mkdir -p #{ARGV[0]}/vendor/freetds`
`curl https://s3.amazonaws.com/firmhouse/freetds-0.tgz -o - | tar -xz -C #{ARGV[0]}/vendor/freetds -f -`

`sudo gem install tiny_tds -- --with-freetds-include=#{ARGV[0]}/vendor/freetds`

# sync output
$stdout.sync = true

$:.unshift File.expand_path("../../lib", __FILE__)
require "language_pack"

if pack = LanguagePack.detect(ARGV[0], ARGV[1])
  pack.log("compile") do
    pack.compile
  end
end