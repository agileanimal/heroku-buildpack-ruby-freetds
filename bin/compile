#!/usr/bin/env ruby

`mkdir -p $1/vendor/freetds`
`curl https://s3.amazonaws.com/firmhouse/freetds-0.tgz -o - | tar -xz -C $1/vendor/freetds -f -`

`gem install tiny_tds -- --with-free-tds-dir=$1/vendor/freetds`

# sync output
$stdout.sync = true

$:.unshift File.expand_path("../../lib", __FILE__)
require "language_pack"

if pack = LanguagePack.detect(ARGV[0], ARGV[1])
  pack.log("compile") do
    pack.compile
  end
end